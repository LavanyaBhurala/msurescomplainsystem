<html>
  <%- include('../includes/header.ejs', {title: 'MSU Residential Complaint System' }) %>
  <body class="bg-primary" style="overflow-y:hidden;">
    <div class="bg-image" style="background-image: url('../images/login_university_.jpg'); 100vh;">
      <h1 style="text-align: center">MSU Residential Complaint System</h1>
      <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
          <main>
            <div class="container">
              <div class="row justify-content-center">
                <div class="col-lg-5">
                  <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                      <h3 class="text-center font-weight-light my-4">Login</h3>
                    </div>
                    <div class="card-body">
                      <% if (typeof message !='undefined' ) { %>
                        <span>
                          <%= message%>
                        </span>
                      <% } %>
                      <form method="post" action"login">
                        <div class="form-floating mb-3">
                          <input class="form-control" type="text" name="email" placeholder="abc@murraystate.edu" />
                          <label>Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                          <input class="form-control" type="password" name="password" placeholder="Password" />
                          <label>Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                          <input class="btn btn-primary" type="submit" value="Login" />
                        </div>
                      </form>
                    </div>
                    <div class="card-footer text-center py-3">
                      <div class="small">
                        <a href="<%= contextPath%>/register">Register/Sign up!</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </main>
        </div>
      </div>
      <%- include('../includes/footer.ejs') %>
      <%- include('../includes/scripts.ejs') %>
    </div>
  </body>
</html>